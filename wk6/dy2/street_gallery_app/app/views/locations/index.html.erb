<p id="notice"><%= notice %></p>

<h1>Listing Locations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |l| %>
      <%= render(partial: 'location', locals: {location: l}) %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path %>

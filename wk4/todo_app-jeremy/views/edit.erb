<div class="row">
  <form action="/todos/<%= @todo['id'] %>" method="post" class="col s12">
    <div class="row">
      <div class="input-field col s6">
        <input id="task" type="text" name="task" value="<%= @todo['task'] %>" class="validate">
        <label for="task">Task</label>
      </div>
      <div class="input-field col s6">
        <input id="description" type="text" name="description" value="<%= @todo['description'] %>" class="validate">
        <label for="description">Description</label>
      </div>
    </div>
    <button class="btn waves-effect waves-light" type="submit" name="action">Update
      <i class="material-icons"></i>
    </button>
  </form>
</div>